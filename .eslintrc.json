{
    "plugins": [
        "react",
        "react-hooks"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "semi": [2, "always"],
      "template-curly-spacing" : "off",
      "object-curly-spacing": [2, "always"],
      "no-extra-parens": 1,
      "no-multi-spaces": 1,
      "no-console": 1,
      "no-undef":1,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "react-hooks/rules-of-hooks": 2
    },
    "settings": {
      "react": {
        "version": "^17.0.2"
      }
    }
}